{
  "manifest_version": 3,
  "name": "TOTP Generator",
  "version": "1.0",
  "description": "A simple TOTP code generator",
  "permissions": [
    "storage",
    "activeTab",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
} 