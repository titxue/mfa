{
  "manifest_version": 3,
  "name": "TOTP Generator",
  "version": "1.0",
  "description": "A simple TOTP code generator",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "clipboardWrite",
    "webNavigation",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [{
    "resources": ["totp.js"],
    "matches": ["<all_urls>"]
  }],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  }
} 